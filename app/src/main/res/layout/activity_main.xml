<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <include layout="@layout/activity_nav" android:id="@+id/Nav"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/targetMenuNav"
            android:layout_below="@id/Nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/danHui"
                android:padding="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="目标" />

                <ImageView
                    android:id="@+id/arrowDownImage"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrowdown"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/arrowUpImage"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrowup"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/timeProgress"
            android:layout_below="@id/targetMenuNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/danHui">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:src="@drawable/progress"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/tagMenuNav"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@color/danZi"
                        android:gravity="center"
                        android:text="测试"
                        android:textColor="#304FFE"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="01:30:00"
                    android:textSize="40sp"
                    android:textColor="@color/zi"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="开始学习吧"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/hui"
                    android:gravity="top" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/timeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/zi">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:text="开始"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/zi" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/targetMenuDetail"
            android:layout_below="@id/targetMenuNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/timeTargetName"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/hui"
                        android:textStyle="bold"
                        android:text="测试1" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="29dp"
                        android:src="@drawable/coin"
                        android:layout_toLeftOf="@id/timeTargetPoint"/>
                    <TextView
                        android:id="@+id/timeTargetPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/hui"
                        android:textStyle="bold"
                        android:text="X2"
                        android:layout_toLeftOf="@id/timeTargetDeadline"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"/>


                    <TextView
                        android:id="@+id/timeTargetDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/hui"
                        android:textStyle="bold"
                        android:text="还有3天"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/timeTargetName2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/hui"
                        android:textStyle="bold"
                        android:text="测试2" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="29dp"
                        android:src="@drawable/coin"
                        android:layout_toLeftOf="@id/timeTargetPoint2"/>
                    <TextView
                        android:id="@+id/timeTargetPoint2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/hui"
                        android:textStyle="bold"
                        android:text="X2"
                        android:layout_toLeftOf="@id/timeTargetDeadline2"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"/>


                    <TextView
                        android:id="@+id/timeTargetDeadline2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/hui"
                        android:textStyle="bold"
                        android:text="还有3天"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tagMenuDetail"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/zi"
                android:padding="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/danZi"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/zi"
                                android:text="测试1"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginLeft="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/zi"
                                android:text="测试2"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginLeft="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/zi"
                                android:text="测试3"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/countdownafter"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/zi"
                                    android:text="1小时30分钟"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/coin"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/zi"
                                    android:text="hhhh"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/homeCardView"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                app:cardCornerRadius="20dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/zi">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="确定"
                                        android:textColor="@color/white"
                                        android:gravity="center"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:backgroundTint="@color/zi" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawerMenu"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include
            layout="@layout/activity_drawer_menu"/>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>