<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="40dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:background="@color/danHui">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:src="@drawable/targetlogo"
            android:layout_marginLeft="10dp"
            android:id="@+id/tagDetail1Left"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toRightOf="@+id/tagDetail1Left"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/targetCompletedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有完成的目标"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/targetCompletedDescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快去完成吧"
                android:layout_gravity="start"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>