<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginStart="10dp"
android:layout_marginEnd="10dp"
android:layout_marginTop="40dp"
app:cardElevation="0dp"
app:cardCornerRadius="20dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    tools:ignore="MissingConstraints"
    android:background="@color/danHui">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:src="@drawable/targetlogo"
        android:layout_marginLeft="10dp"
        android:id="@+id/tagDetail2Left"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_toRightOf="@+id/tagDetail2Left"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/targetWithTimeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/targetWithTimeDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hhh"
            android:textSize="20sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <androidx.cardview.widget.CardView
            android:id="@+id/targetWithTimePointCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@color/red"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/coin" />
                <TextView
                    android:id="@+id/targetWithTimePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/targetWithTimeDayDifference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1å¤©"
            android:layout_below="@id/targetWithTimePointCardView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/hui" />

        <androidx.cardview.widget.CardView
            android:id="@+id/targetWithTimeDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/gradient_background_purple"
                android:gravity="center">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/x" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>