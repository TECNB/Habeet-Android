<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/titleTextView"
            android:layout_above="@id/footerTextView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="感谢您选择使用 Habeet 小程序（以下简称本小程序）。
                为了向您提供更好的服务，我们将依据本隐私政策为您提供详细说明，包括我们如何收集、使用、储存和保护您的个人信息。
                请您在使用本小程序之前，仔细阅读并同意本隐私政策的所有内容。"
                android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 信息收集与使用"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.1 我们仅收集您在注册和使用本小程序时主动提供的个人信息，包括但不限于您的姓名、联系方式等，以便为您提供更好的服务和支持。"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.2 为了改进本小程序的用户体验和服务质量，我们可能会收集您在使用本小程序过程中产生的操作信息、设备信息和日志信息，这些信息将用于统计分析和系统优化，但不会直接关联到您的个人身份。"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. 信息存储与保护"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.1 我们采取严格的安全措施来保护您的个人信息，防止未经授权的访问、使用、修改或泄露。"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.2 您的个人信息将存储在我们的安全服务器上，并仅在实现本隐私政策所述目的的范围内使用。"
                    android:layout_marginBottom="16dp" />

                <!-- 更多章节的类似 TextView 元素 -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. 信息共享与披露"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.1 我们承诺不会将您的个人信息出售、出租或交易给任何第三方。"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.2 在法律法规允许的范围内，我们可能会与合作伙伴共享必要的个人信息，以提供更好的服务和支持，但我们将与其签订保密协议并要求其按照我们的指示、本隐私政策以及其他任何相关的保密和安全措施来处理这些信息。"
                    android:layout_marginBottom="16dp" />

                <!-- 更多章节的类似 TextView 元素 -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. 隐私政策的变更"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我们可能会不时地修改本隐私政策的内容。对于重大变更，我们将提供显著的通知或在本小程序上发布告示。您继续使用本小程序将被视为您接受修订后的隐私政策。"
                    android:layout_marginBottom="16dp" />


            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/footerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如您对本协议或隐私政策有任何疑问、意见或投诉，请联系我们。感谢您的支持和信任！"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>